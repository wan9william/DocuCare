<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestResultFragment"
    android:id="@+id/fragment_testresult_view"
    android:background="@drawable/docucare_logo_background">

    <TextView
        android:id="@+id/text_appointment"
        android:text="Test Results"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:gravity="center|bottom"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/homebutton"
        android:text="â†"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:textSize = "40dp"
        android:contentDescription="A tiny return arrow"
        android:layout_gravity="center|top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/pdf_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="70dp"
        android:gravity="start|top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/pdfbutton1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@mipmap/pdf_round"
            />
        <ImageButton
            android:id="@+id/pdfbutton2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@mipmap/pdf_round"
            />
        <ImageButton
            android:id="@+id/pdfbutton3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@mipmap/pdf_round"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
